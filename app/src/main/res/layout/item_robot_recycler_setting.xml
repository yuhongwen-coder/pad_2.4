<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/robot_setting_fun_bg"
        android:layout_width="276dp"
        android:layout_height="84dp"
        android:src="@drawable/robot_setting_blue_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/robot_setting_fun_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@mipmap/robot_setting_water"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintRight_toRightOf="@id/robot_setting_fun_bg"
        app:layout_constraintBottom_toBottomOf="@id/robot_setting_fun_bg"
        app:layout_constraintLeft_toLeftOf="@id/robot_setting_fun_bg"
        app:layout_constraintTop_toTopOf="@id/robot_setting_fun_bg" />

    <LinearLayout
        android:id="@+id/robot_setting_fun_text_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/robot_setting_fun_bg"
        app:layout_constraintTop_toTopOf="@id/robot_setting_fun_bg"
        app:layout_constraintBottom_toBottomOf="@id/robot_setting_fun_bg"
        app:layout_constraintLeft_toRightOf="@id/robot_setting_fun_image">
        <TextView
            android:id="@+id/robot_setting_fun_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="水量："
            android:textSize="20dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/robot_setting_fun_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30%"
            android:textSize="20dp"
            android:textColor="@color/white"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>