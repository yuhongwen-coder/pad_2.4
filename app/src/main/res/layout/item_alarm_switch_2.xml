<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/item_alarm_switch_top_corner"
        android:layout_height="224dp"
        android:layout_width="203dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/item_alarm_switch_top_corner"/>

    <ImageView
        android:id="@+id/item_alarm_switch_bottom_corner"
        android:layout_height="74dp"
        android:layout_width="203dp"
        app:layout_constraintTop_toBottomOf="@id/item_alarm_switch_top_corner"
        app:layout_constraintLeft_toLeftOf="@id/item_alarm_switch_top_corner"
        app:layout_constraintRight_toRightOf="@id/item_alarm_switch_top_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/item_alarm_switch_bottom_corner"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="@id/item_alarm_switch_top_corner"
        app:layout_constraintBottom_toBottomOf="@id/item_alarm_switch_top_corner"
        app:layout_constraintLeft_toLeftOf="@id/item_alarm_switch_top_corner"
        app:layout_constraintRight_toRightOf="@id/item_alarm_switch_top_corner">
        <ImageView
            android:id="@+id/item_alarm_switch_image"
            android:src="@mipmap/face_switch_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="20dp"
            android:textSize="30dp"
            android:id="@+id/item_alarm_switch_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="人脸识别"/>
    </LinearLayout>

    <TextView
        app:layout_constraintLeft_toLeftOf="@id/item_alarm_switch_bottom_corner"
        app:layout_constraintTop_toTopOf="@id/item_alarm_switch_bottom_corner"
        app:layout_constraintBottom_toBottomOf="@id/item_alarm_switch_bottom_corner"
        android:id="@+id/item_alarm_switch_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="未开启"
        android:textSize="30dp"
        android:textColor="#707073" />
    <LinearLayout
        android:id="@+id/item_alarm_switch_state_switch_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/item_alarm_switch_bottom_corner"
        app:layout_constraintBottom_toBottomOf="@id/item_alarm_switch_bottom_corner"
        app:layout_constraintTop_toTopOf="@id/item_alarm_switch_bottom_corner">
        <Switch
            android:gravity="center"
            android:layout_marginEnd="24dp"
            android:id="@+id/item_alarm_switch_state_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:switchMinWidth = "31dp"
            android:clickable="false"
            android:layout_alignParentRight="true"
            android:thumb="@drawable/item_alarm_switch_thumb_on"
            android:track="@drawable/item_alarm_switch_track_on"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>